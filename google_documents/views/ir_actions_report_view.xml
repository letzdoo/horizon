<odoo>
    <!-- Add program for student form view -->
    <record id="act_report_xml_view_google_docs" model="ir.ui.view">
        <field name="name">ir.actions.report.google.docs</field>
        <field name="model">ir.actions.report</field>
        <field name="inherit_id" ref="base.act_report_xml_view" />
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='advanced']/group" position="replace">
                <group>
                    <field name="google_drive_enabled" />
                    <field
                        name="google_drive_patner_field"
                        attrs="{'readonly': [('google_drive_enabled', '=', False)], 'required': [('google_drive_enabled', '=', True)]}"
                    />
                    <field
                        name="attachment"
                        attrs="{'readonly': [('google_drive_enabled', '=', True)]}"
                    />
                    <field name="attachment_use" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
